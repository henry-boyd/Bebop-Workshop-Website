<style>
    .homepage-header {
        display: flex;
        flex-wrap: wrap;
        margin-left: auto;
        margin-right: auto;
        padding: 0rem 3rem;
        z-index: 1;
    }

    .lightbulb-with-title {
        display: flex;
        flex-wrap: wrap;
        max-height: 200px;
    }

    .lightbulb-box {
        width: 150px;
        height: 300px;
    }

    .lightbulb-off-image {

    }

    .title-with-tiny-lightbulb {
        display: flex;
    }

    .tiny-lightbulb {
        display: none;
        max-width: 75px;
        max-height: 150px;

    }

    .homepage-title {
        margin: 0;
        font-size: 5rem;
    }

    .menu-with-line {
        display: flex;
    }


    .homepage-header-line-box {
        width: 11vw;
    }

    .homepage-header-line {
        margin-top: 145px;
        border-top: 2px solid black;
    }

    .homepage-menu {
        margin-top: 80px; 
        display: flex;
        max-width: 200px;
        padding: 28px 20px;
        gap: 16px;
        align-items: center;
        border: 2px solid #000;
    }

    a {
        text-decoration: none;
        color: black;
        font-size: 1.375rem;
    }

    @media (max-width: 1200px) {
        .homepage-header {
            display: grid;
            padding: 0 0;
        }

        .homepage-header-line {
            border-top: white;
        }
        .homepage-header-line-box {
            width: 150px;
        }

        .homepage-menu {
           margin: 1rem 0;
        }
    }

    @media (max-width: 650px) {
        .homepage-header {
            display: grid;
            grid-template-columns: 1fr;
            padding: 0 0;
        }

        .lightbulb-box {
            display: none;
        }

        .tiny-lightbulb {
        display: block;
        }

        .homepage-header-line-box {
            display: none;
        }
    }
</style>