---
import type { CollectionKey } from 'astro:content';
import { getCollection, getEntry, render  } from 'astro:content';

interface Props {
    projectName: CollectionKey;
}

const { projectName } = Astro.props;
const projectCollection = await getCollection(projectName, ({ data }) => {
  return data.draft == true;
}) ;

---

<div class="table-of-contents-section">
    <div class="table-of-contents-box">
        <ul class="table-of-contents">
            {projectCollection.map(post => (
              <li>{post.data.title}</li>
            ))}
        </ul>
        <button class="menu-button" id="menu-button" onclick="menuExpandCollapse()">
            <img src="src/assets/DropDownArrow.svg"/>
        </button>

        <script type="text/Javascript">
            var content = document.getElementById('menu-button');
            function menuExpandCollapse() {
            content.classList.toggle('rotate');
            }
            
            var coll = document.getElementsByClassName("table-of-contents-section");
            var i;
            for (i = 0; i < coll.length; i++) {
            coll[i].addEventListener("click", function() {
                this.classList.toggle("active");
                var content = this;
                if (content.style.maxHeight){
                    content.style.maxHeight = null;
                } else {
                    content.style.maxHeight = content.scrollHeight + "px";
                }
            });
            }
        </script>
    </div>
</div>


<style>
    .rotate {
    transform: rotate(180deg);
    }

    .table-of-contents-section {
        max-height: 60px;
        width: 100%;
        position: sticky;
        top: 0;
        z-index: 2;
        background-color: white;
        border: 1px solid #000;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
    }

    .table-of-contents-box {
        max-width: 47.5rem;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        justify-content: space-between;
        border: 1px solid #000;
    }

    .table-of-contents {
        list-style-type: none;
        display: flex;
        flex-direction: column;
        margin: 0;
        padding: 1rem 2rem;
        z-index: 2;
    }

    .menu-button {
        display: grid;
        border: none;
        background: none;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        margin: 1rem 2rem;
        transition: 0.6s ease-in-out;
    }

    li {
        display: block;
        transition-duration: 0.5s;
        text-decoration: none;
        text-color: black;
        margin: .25rem 0;
        z-index: 2;
    }

    @media(min-width: 1200px) {
        .table-of-contents-section {
            display: none;
        }
    }
</style>