---
import JournalSummary from '../components/JournalSummary.astro';
import JournalEntry from '../components/JournalEntry.astro';
import type { CollectionKey } from 'astro:content';
import { getCollection } from 'astro:content';

interface Props {
    projectName: CollectionKey;
    projectTitle: string;
}

const { projectName, projectTitle } = Astro.props;

const collectionName = await getCollection(projectName, ({ data }) => {
  return data.draft == true;
});

---
<div class="project-journal-layout">
    <div class="project-journal">
        <JournalSummary projectTitle ={projectTitle} />
        {collectionName.map(post => (
            <JournalEntry projectName={projectName} entryID={post.id} entrySection={post.data.section} entryTitle={post.data.title} />
          ))}
        
        <div class="end-of-line">
            <div class="title-section">
                <div class="title-dashed-line"></div>
                <h3>End of the Line</h3>
            </div>
        </div>
</div>
</div>

<style>
    .project-journal-layout {
        display: grid;
        grid-template-columns: 1fr;
    }

    .project-journal-timeline-bar {
        background-color: black;
        width: 4px;
        z-index: 1;
    }

    .title-section:before {
    content: '';
    position: absolute;
    top: 0px;
    height: 87%;
    border-left: 4px solid black;
  }

    .title-section {
        display: flex;
        align-items: center;
        padding-top: 100px;
        margin-bottom: 40px;
   }
    
    .title-dashed-line {
        top: 76px;
        margin-left: 4px;
        border-top: 4px dashed black;
        width: 35px;
        height: 4px;
        margin-right: 10px;
   }

    .end-of-line {
        position: relative;
        text-align: center;
    }

    .end-of-line-box {
        position: absolute;
        top: 0;
        width: 100%;
        height: 130px;

    }

    .end-of-line-text {
        position: absolute;
        bottom: 5%;
        left: 5%;
        background-color: white;
    }

    @media(max-width: 650px) {
        .project-journal {
        padding: 0 .5rem;
    }
    }

</style>
