---

interface Props {
    projectTitle: string;
    projectURL: string;
}

const { projectTitle, projectURL } = Astro.props

---
<div class="project-area">
        <div class="image-box">
            <a href={projectURL} style="color: black">
            <svg class="project-image">
            <h2 class="image-title">{projectTitle}</h2>
            </a>
        </div>
</div>

<style> 
    
    a {
        color: black;
        text-decoration: none;
    }
    
    .project-area {
        display: flex;
        z-index: 1;
    }

    .image-box {
        display: grid;
        width: fit-content;
        height: fit-content;
        justify-content: center;
        border: 2px solid black;
        z-index: 2;
    }

    .image-box:hover {
        .image-title {
            opacity: 1;
        }
    }

    .project-image {
        padding: 20px 40px 0px 40px;
        z-index: 2;
        min-height: 140px;
        min-width: 110px;
        color: black;
    }

    .image-title {
        text-align: center;
        opacity: 0;
        transition: 1s;
        padding: 0 2rem;
    }

    @media(max-width: 1200px) {
        .image-title {
            opacity: 1;
        }
    }

    @media (max-width: 850px) {
        .project-area {
            display: grid;
            justify-content: center;
			padding: 2rem 0rem;
        }
        .image-box {
            margin: 0;
        }
    }
</style>
