---
import type { CollectionKey } from 'astro:content';
import { getCollection, getEntry, render  } from 'astro:content';

interface Props {
    projectName: CollectionKey;
}

const { projectName } = Astro.props;
const projectCollection = await getCollection(projectName, ({ data }) => {
  return data.draft == true;
}) ;

---

<div class="table-of-contents">
        <ul class="table-of-contents-box">
            <li>Top</li>
            {projectCollection.map(post => (
              <li>{post.data.title}</li>
            ))}
        </ul>
</div>

<style>
    .table-of-contents {
        position: sticky;
        display: flex;
        padding: 160px 1rem 300px 0px;
        flex-direction: column;
        align-items: center;
        flex-shrink: 0;
    }

    .table-of-contents-box {
        list-style-type: none;
        display: flex;
        position: fixed;
        padding: 1rem 28px 1rem 1rem;
        width: 20ch;
        flex-direction: column;
        text-align: right;
        border: 1px solid black;
        box-shadow: 0 4px 4px 0 rgba(0,0,0,0.2);
    }

    li {
        text-decoration: none;
        text-color: black;
        margin: .25rem 0;
    }

    @media(max-width: 1250px) {
        .table-of-contents {
        display: none;
    }
    }
</style>