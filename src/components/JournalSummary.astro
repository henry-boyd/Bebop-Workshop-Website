---
import { getCollection, getEntry, render,  } from 'astro:content';

interface Props {
    projectTitle: string;
}

const { projectTitle } = Astro.props;

---
<div class="journal-summary">
    <div class="title-dashed-line"></div>

    <h1>{projectTitle}</h1>

    <div class="journal-featured-image" style="border: 1px solid grey;">
        <img src="/src/assets/testfeaturedimage.jpg">
    </div>
</div>

<style>
   .journal-summary {
    position: relative;
   }
   .title-dashed-line {
        position: absolute; 
        top: 34.5px;
        border-top: 4px dashed black;   
        width: 35px;
        height: 4px;
        z-index: 1;
   }
   
   h1 {
    padding-left: 40px;
    max-width: 24ch;
   }
   
   img {
        width: 100%;
        max-height: 500px;
    }

    .journal-featured-image {
        max-height: 500px;
    }
</style>